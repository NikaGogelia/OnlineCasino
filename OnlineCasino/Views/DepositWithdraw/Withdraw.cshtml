@{
	ViewData["Title"] = "Withdraw";
}


<div class="withdraw-page" id="withdraw">
	<h1>How much you want to Withdraw</h1>
	<form id="transactionForm" data-transaction-type="withdraw">
		<div class="form-group">
			<label for="amount">Enter Amount</label>
			<input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0.01" required />
		</div>
		<button type="submit" class="btn btn-success">Withdraw</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
	</form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/DepositWithdrawRequest.js" asp-append-version="true"></script>