@{
	ViewData["Title"] = "Deposit";
}


<div class="deposit-page" id="deposit">
	<h1>How much you want to Deposit</h1>
	<form id="transactionFormDeposit" method="post">
		<div class="form-group">
			<label for="amount">Enter Amount</label>
			<input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0.01" />
		</div>
		<button id="depositSend" type="submit" class="btn btn-success">Deposit</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
	</form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/DepositRequest.js" asp-append-version="true"></script>